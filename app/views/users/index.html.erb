<div class='row'>
  <h1 align="center">Leaderboard</h1>
  <div class="table-responsive col-md-8 col-xs-12 col-sm-8">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>User</th>
          <th>Score</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%=user.name%></td>
            <td><%=user.score%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
